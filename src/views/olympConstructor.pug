extends ../public/index

block header
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0')
    meta(http-equiv='X-UA-Compatible', content='ie=edge')
    link(rel='stylesheet', href='/stylesheets/olympConstructor.css')
    script(src='/scripts/olympConstructor.js')
    title #{title}
    
block main
    article
        section(class="olymp-head")
            input(type="text" name="olymp-name" placeholder="Название олимпиады" )
            span(id="cat-name") Программирование
            .olymp-cat
                input(type="radio", name="olymp-cat" value="prog" id="prog" onclick="catChange(0)")
                label(for="prog")
                input(type="radio", name="olymp-cat" value="office" id="office" onclick="catChange(1)")
                label(for="office")
                input(type="radio", name="olymp-cat" value="arch" id="arch" onclick="catChange(2)")
                label(for="arch")
                input(type="radio", name="olymp-cat" value="weld" id="weld" onclick="catChange(3)")
                label(for="weld")
                input(type="radio", name="olymp-cat" value="mech" id="mech" onclick="catChange(4)")
                label(for="mech")
                input(type="radio", name="olymp-cat" value="art" id="art" onclick="catChange(5)")
                label(for="art")

        section(class="olymp-body")
            .question
                span 1
                    .delete-question(onclick="deleteQuest(0)") -
                input(type="text", name="question_1" class="question-text" placeholder="Вопрос")
                .answers
                    .answer
                        input(type="text", name="answer_1_1" placeholder="Ответ")
                        input(type="radio", name="right-answer_1" value="1" id="answer_1_1")
                        label(for="answer_1_1")
                        .delete-answer(onclick="deleteAnswer(0)")
                    .answer
                        input(type="text", name="answer_2_1" placeholder="Ответ")
                        input(type="radio", name="right-answer_1" value="2" id="answer_2_1")
                        label(for="answer_2_1")
                        .delete-answer(onclick="deleteAnswer(1)")
                    .answer
                        input(type="text", name="answer_3_1" placeholder="Ответ")
                        input(type="radio", name="right-answer_1" value="3" id="answer_3_1")
                        label(for="answer_3_1")
                        .delete-answer(onclick="deleteAnswer(2)")
                    .create-answer(onclick="createAnswer(0)")
                .opt-content
                    .type-choose
                        input(type="radio", name="opt-content-type_1" value="nothing" id="opt-content-type_1_1" checked)
                        label(for="opt-content-type_1_1")
                        input(type="radio", name="opt-content-type_1" value="code" id="opt-content-type_2_1")
                        label(for="opt-content-type_2_1")
                        input(type="radio", name="opt-content-type_1" value="image" id="opt-content-type_3_1")
                        label(for="opt-content-type_3_1")
                    .opt-content-values
                        input(type="file", name="opt-content_1")
                
            .question
                span #
                input(type="text", name="question_1" class="question-text" placeholder="Вопрос")
                .answers
                    .answer
                        input(type="text", name="answer_1_1" placeholder="Ответ")
                        input(type="radio", name="right-answer_1" value="1" id="answer_1_1")
                        label(for="answer_1_1")
                        .delete-answer
                    .answer
                        input(type="text", name="answer_2_1" placeholder="Ответ")
                        input(type="radio", name="right-answer_1" value="2" id="answer_2_1")
                        label(for="answer_2_1")
                        .delete-answer
                    .answer
                        input(type="text", name="answer_3_1" placeholder="Ответ")
                        input(type="radio", name="right-answer_1" value="3" id="answer_3_1")
                        label(for="answer_3_1")
                        .delete-answer
                    .create-answer
                .opt-content
                    .type-choose
                        input(type="radio", name="opt-content-type_1" value="nothing" id="opt-content-type_1_1" checked)
                        label(for="opt-content-type_1_1")
                        input(type="radio", name="opt-content-type_1" value="code" id="opt-content-type_2_1")
                        label(for="opt-content-type_2_1")
                        input(type="radio", name="opt-content-type_1" value="image" id="opt-content-type_3_1")
                        label(for="opt-content-type_3_1")
                    .opt-content-values
                        textarea(name="opt-content_2", cols="30", rows="10" placeholder="Код")
        section(class="olymp-buttons")
            button.button-create
            button.button-save